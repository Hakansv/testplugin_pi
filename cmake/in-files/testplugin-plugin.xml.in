<?xml version="1.0" encoding="UTF-8"?>
<opencpn-plugin version="1">
  <name> ${PACKAGE} </name>
  <version> ${PACKAGE_VERSION} </version>
  <release> ${PKG_RELEASE} </release>
  <summary> ${XML_SUMMARY} </summary>

  <api-version> ${PKG_API_VERSION} </api-version>
  <open-source> yes </open-source>
  <author> ${PKG_AUTHOR} </author>
  <source> https://github.com/${GIT_USER}/${GIT_REPOSITORY_NAME} </source>

  <description>
    ${XML_DESCRIPTION}
  </description>

  <target>${PKG_TARGET}</target>
  <target-version>${PKG_TARGET_VERSION}</target-version>
  <tarball-url>
    ${PKG_BASE_URL}/${PKG_NVR}_${PKG_TARGET_NVR}.tar.gz
  </tarball-url>
  <info-url> ${XML_INFO_URL} </info-url>
</opencpn-plugin>
